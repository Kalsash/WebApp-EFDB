@page
@using WebApp_Landing.Pages
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Main Content -->
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
        <div class="flex items-center justify-center space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="text-4xl font-bold text-swamp-900" viewBox="0 0 512 512"
                 style="fill:currentColor" width="1em">
                <!--!Font Awesome Free 6.7.2 by fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                <path d="M256 0c4.6 0 9.2 1 13.4 2.9L457.7 82.8c22 9.3 38.4 31 38.3 57.2c-.5 99.2-41.3 280.7-213.6 363.2c-16.7 8-36.1 8-52.8 0C57.3 420.7 16.5 239.2 16 140c-.1-26.2 16.3-47.9 38.3-57.2L242.7 2.9C246.8 1 251.4 0 256 0zm0 66.8l0 378.1C394 378 431.1 230.1 432 141.4L256 66.8s0 0 0 0z"></path>
            </svg>
            <h1 class="text-4xl font-bold text-swamp-900">Privacy Statement</h1>
        </div>
        <p class="mt-2 text-swamp-800 italic">Last Updated: On a Whim of a Toad God</p>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-8 space-y-8">
        <!-- Section 1 -->
        <section class="relative pl-20 min-h-[100px]">
            <div class="absolute left-0 top-0 w-16">
                <div class="text-swamp-100 bg-swamp-700 rounded-full w-14 h-14 flex items-center justify-center">
                    <span class="text-3xl font-black">1</span>
                </div>
            </div>
            <div>
                <h2 class="text-xl font-semibold text-swamp-900 mb-3">What We Capture</h2>
                <p class="text-swamp-800 leading-relaxed">
                    We collect data—like your email, IP address, and which lily pads you hop on. Don’t worry, we’re not
                    hoarding your fly recipes.
                </p>
            </div>
        </section>

        <!-- Section 2 -->
        <section class="relative pl-20 min-h-[100px] border-t border-swamp-100 pt-8">
            <div class="absolute left-0 top-8 w-16">
                <div class="text-swamp-100 bg-swamp-700 rounded-full w-14 h-14 flex items-center justify-center">
                    <span class="text-3xl font-black">2</span>
                </div>
            </div>
            <div>
                <h2 class="text-xl font-semibold text-swamp-900 mb-3">How We Use Your Data</h2>
                <p class="text-swamp-800 leading-relaxed">
                    Using our services = your croak of approval. No tadpole exceptions.
                    If you're under 18, hop back when you're a legal frog.
                </p>
            </div>
        </section>

