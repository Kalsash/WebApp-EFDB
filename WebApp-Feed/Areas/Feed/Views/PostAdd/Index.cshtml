@{
    ViewData["Title"] = "Добавить пост";
}

<div class="post-form">
    <h2>Добавить пост</h2>
    <form id="postForm">
        <textarea id="postContent" placeholder="Введите текст поста" required></textarea>
        <button type="submit">Отправить</button>
    </form>
    <div id="result"></div>
</div>

@section Scripts {
    <script>
        document.getElementById('postForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const content = document.getElementById('postContent').value;

            try {
                const response = await fetch('/feed/postadd', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify(content)
                });

                const result = await response.text();
                document.getElementById('result').innerHTML = response.ok
                    ? '<p style="color:green">Пост успешно добавлен!</p>'
                    : '<p style="color:red">Ошибка: ' + result + '</p>';

                if (response.ok) {
                    document.getElementById('postContent').value = '';
                }
            } catch (error) {
                document.getElementById('result').innerHTML = '<p style="color:red">Ошибка сети</p>';
            }
        });
    </script>

    <style>
        .post-form {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
        }

        textarea {
            width: 100%;
            height: 100px;
            margin-bottom: 10px;
            padding: 10px;
        }

        button {
            padding: 8px 15px;
            background: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background: #0056b3;
            }

        #result {
            margin-top: 10px;
        }
    </style>
}